str = "JavaTpoint" #
print ("The original string  is : ",str)   
reverse_String = ""  # Empty String  
count = len(str) #
while count > 0:   
    reverse_String += str[ count - 1 ] # save the value of str[count-1] in reverseString  
    count = count - 1 
print ("The reversed string using a while loop is : ",reverse_String)
